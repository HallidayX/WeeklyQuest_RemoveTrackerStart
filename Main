<#using { /Fortnite.com/Devices }
using { /Fortnite.com/Game }
using { /Verse.org/Simulation }
 
# トラッカーデバイス配列の全トラッカーをプレイヤーから削除するデバイス
WeeklyQuest_tracker_removal_device := class(creative_device):
 
    @editable
    TrackerDevices : []tracker_device = array{}
 
    OnBegin<override>()<suspends>:void=
        # ゲーム開始時に全プレイヤーのトラッカーを削除
        for (Player : GetPlayspace().GetPlayers()):
            RemoveAllTrackersFromPlayer(Player)
        # 途中参加プレイヤーの対応
        GetPlayspace().PlayerAddedEvent().Subscribe(OnPlayerAdded)
 
    # プレイヤー参加時にトラッカーを削除
    OnPlayerAdded(Player:player):void=
        RemoveAllTrackersFromPlayer(Player)
 
    # 指定プレイヤーから全トラッカーを削除
    RemoveAllTrackersFromPlayer(Player:player):void=
        for (Tracker : TrackerDevices):
            Tracker.Remove(Player)#>
